extends ../layouts/main-layout.pug
block styles
    link(rel="stylesheet", href="/css/forms.css")
    link(rel="stylesheet", href="/css/auth.css")
block content
    main
        if errorMessage
            .user-message.user-message--error #{ errorMessage }
        form.login-form(action="/signup" method="POST")
            .form-control
                label(for="email") E-Mail
                input(
                    type="email"
                    name="email"
                    id="email"
                    value=oldInput ? oldInput.email : ''
                    class=errors.find(e => e.param === 'email') ? 'invalid' : ''
                )
            .form-control
                label(for="password") Password
                input(
                    type="password"
                    name="password"
                    id="password"
                    value=oldInput ? oldInput.password : ''
                    class=errors.find(e => e.param === 'password') ? 'invalid' : ''
                )
            .form-control
                label(for="confirmPassword") Password
                input(
                    type="password"
                    name="confirmPassword"
                    id="confirmPassword"
                    value=oldInput ? oldInput.confirmPassword : ''
                    class=errors.find(e => e.param === 'confirmPassword') ? 'invalid' : ''
                )
            input(type="hidden" name="_csrf" value=csrfToken)
            button.btn(type="submit") Signup